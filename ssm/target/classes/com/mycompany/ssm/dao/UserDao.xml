<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mycompany.ssm.dao.UserDao">
    
    <insert id="insertUser" parameterType="com.mycompany.ssm.model.User">
        <!-- <selectKey ReturnType="int">
            
        </selectKey> -->
        INSERT INTO user(name,sex,age,address)VALUES(#{name},#{sex},#{age},#{address})
    </insert>
    
    <delete id="deleteUserById" parameterType="int">
        DELETE FROM user WHERE id=#{id}
    </delete>
    
    <update id="updateUser" parameterType="com.mycompany.ssm.model.User">
        UPDATE user
        <set>
            <if test="name!=null and name!=''">
                name=#{name}
            </if>
            <if test="sex!=null and sex!=''">
                sex=#{sex}
            </if>
            <if test="age=null and age!=''">
                age=#{age}
            </if>
            <if test="address!=null and address!=''">
                address=#{address}
            </if>
        </set>
        WHERE id=#{id}
    </update>
    
    <select id="getUserById" parameterType="int" 
        resultType="com.mycompany.ssm.model.User">
        SELECT * FROM user WHERE id=#{id}
    </select>
    
    <select id="selectUserList" parameterType="com.mycompany.ssm.model.User"
        resultType="com.mycompany.ssm.model.User">
        SELECT * FROM user 
        <where>
            <if test="id!=null and id!=''">
                id=#{id};
            </if>
            <if test="name!=null and name!=''">
                name=#{name}
            </if>
            <if test="sex!=null and sex!=''">
                sex=#{sex}
            </if>
            <if test="age!=null and age!=''">
                age=#{age}
            </if>
            <if test="address!=null and address!=''">
                address=#{address}
            </if>
        </where>
    </select>
    
    <select id="selectUserListByKey" parameterType="String">
        SELECT * FROM user 
        <where>
           <choose>
               <when test="key!=null and key=''">
                   id LIKE CONCAT('%',#{key}'%')
               </when>
               <when test="key!=null and key=''">
                   name LIKE CONCAT('%',#{key}'%')
               </when>
               <when test="key!=null and key=''">
                   sex LIKE CONCAT('%',#{key}'%')
               </when>
               <when test="key!=null and key=''">
                   age LIKE CONCAT('%',#{key}'%')
               </when>
               <when test="key!=null and key=''">
                   address LIKE CONCAT('%',#{key}'%')
               </when>
           </choose>
        </where>
    </select>
    
</mapper>